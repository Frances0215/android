<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.photograph.PhotographFragment"
    android:background="@color/white">


    <FrameLayout
        android:id="@+id/mFlCamera"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="@drawable/bg_button_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2">

        <com.example.news.FontIconView
            android:id="@+id/mIvCamera"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="@string/camera"
            android:textSize="150dp"
            android:textColor="@color/主题色"
            />

        <TextView
            android:id="@+id/mTvCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍照识字"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textSize="35sp"
            android:textColor="@color/主题色"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="175dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/mFlRecognize"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="@drawable/bg_button_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <com.example.news.FontIconView
            android:id="@+id/mIvRecognize"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="@string/recognize"
            android:textSize="150dp"
            android:textColor="@color/主题色"
            />

        <TextView
            android:id="@+id/mTvRecognize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实时识物"
            android:fontFamily="casual"
            android:textSize="35sp"
            android:textColor="@color/主题色"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="185dp"
            android:textStyle="bold"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>