        <activity android:name=".ui.user.AppUsageActivity"
            android:label="应用指南"/>
        <activity android:name=".ui.user.ContactUsActivity"
            android:label="联系我们"/>
        <activity android:name=".ui.user.PeopleInfoActivity"
